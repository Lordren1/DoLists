<script>
  // Function to handle the edit button click
  function handler(id) {
    document.getElementById("title" + id).setAttribute("hidden", true); // Hide the title
    document.getElementById("edit" + id).setAttribute("hidden", true); // Hide the edit button
    document.getElementById("done" + id).removeAttribute("hidden"); // Show the done button
    document.getElementById("input" + id).removeAttribute("hidden"); // Show the input field
  }
</script>

